generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Bakim {
  id            Int      @id @default(autoincrement())
  firmaIsmi     String
  tezgahSeriNo  String
  aciklama      String
  musteriAdi    String
  musteriMail   String
  muhendisAdi   String
  musteriImza   String?
  teknisyenImza String?
  createdAt     DateTime @default(now())
}

model Ariza {
  id            Int      @id @default(autoincrement())
  firmaIsmi     String
  tezgahSeriNo  String
  aciklama      String
  musteriIsmi   String
  musteriMail   String
  muhendisAdi   String
  musteriImza   String?
  teknisyenImza String?
  createdAt     DateTime @default(now())
}
